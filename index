    <!-- <script src="search_func.js"></script> -->
     <script>
        function performSearch() {
    const searchInput = document.querySelector('.srch');
    const searchTerm = searchInput.value.toLowerCase();
    
    if (searchTerm.length < 2) {
        alert("Please enter at least 2 characters to search.");
        return;
    }

    // Remove existing highlights first
    const existingHighlights = document.querySelectorAll('.highlight');
    existingHighlights.forEach(highlight => {
        const parent = highlight.parentNode;
        parent.replaceChild(document.createTextNode(highlight.textContent), highlight);
    });

    // Function to highlight text in a node
    function highlightTextInNode(node) {
        if (node.nodeType === 3) { // Text node
            const text = node.nodeValue;
            const lowerText = text.toLowerCase();
            let found = false;
            
            if (lowerText.includes(searchTerm)) {
                found = true;
                const span = document.createElement('span');
                span.className = 'highlight';
                
                const regex = new RegExp(searchTerm, 'gi');
                span.innerHTML = text.replace(regex, match => `<span class="highlight">${match}</span>`);
                
                node.parentNode.replaceChild(span, node);
            }
            return found;
        }
        
        if (node.nodeType === 1 && // Element node
            !['script', 'style', 'textarea', 'input', 'button'].includes(node.tagName.toLowerCase())) {
            let found = false;
            Array.from(node.childNodes).forEach(child => {
                found = highlightTextInNode(child) || found;
            });
            return found;
        }
        
        return false;
    }

    // Start highlighting from the body
    const found = highlightTextInNode(document.body);
    
    if (!found) {
        alert("No results found.");
    }
}

// Add event listener for Enter key
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.querySelector('.srch');
    searchInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            performSearch();
        }
    });
});
     </script>

